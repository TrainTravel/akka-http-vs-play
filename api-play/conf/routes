# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Utils
GET      /health-check                           controllers.Application.healthCheck

# Tasks
GET      /v1/tasks                               controllers.TasksController.list
GET      /v1/tasks/:id                           controllers.TasksController.byId(id: Long)
POST     /v1/tasks                               controllers.TasksController.create
PUT      /v1/tasks/:id                           controllers.TasksController.update(id: Long)
DELETE   /v1/tasks/:id                           controllers.TasksController.delete(id: Long)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
