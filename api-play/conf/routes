# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Utils
GET      /health-check                           controllers.HealthCheckController.healthCheck

# Tasks
POST     /v1/tasks                               controllers.TasksController.create
GET      /v1/tasks/:id                           controllers.TasksController.retrieve(id: Long)
PUT      /v1/tasks/:id                           controllers.TasksController.update(id: Long)
DELETE   /v1/tasks/:id                           controllers.TasksController.delete(id: Long)
GET      /v1/tasks                               controllers.TasksController.list


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
